@model IEnumerable<PartTimeJobManagement.Client.Models.DTOs.JobResponseDTO>

@{
    ViewData["Title"] = "Browse Jobs";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Browse Part-Time Jobs</h2>
        </div>
        <div class="col-auto">
            @if (Context.Session.GetString("UserRole") == "Employer")
            {
                <a asp-action="Create" class="btn btn-success">Post a Job</a>
                <a asp-action="MyJobs" class="btn btn-outline-primary">My Posted Jobs</a>
            }
            @if (Context.Session.GetString("UserRole") == "Student")
            {
                <a asp-controller="Jobs" asp-action="MyApplications" class="btn btn-outline-primary">My Applications</a>
            }
        </div>
    </div>

    <!-- Search and Filter -->
    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Search by job title or description..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-4">
                <select name="categoryId" class="form-select" id="categoryFilter">
                    <option value="">All Categories</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryId" selected="@(category.CategoryId == ViewBag.CategoryId)">
                                @category.CategoryName
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>

    <!-- Job Listings -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var job in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@job.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@job.EmployerName</h6>
                            <p class="card-text text-truncate-3">@job.Description</p>
                            <ul class="list-unstyled">
                                <li><strong>Salary:</strong> $@(job.Salary?.ToString("N2") ?? "N/A")</li>
                                <li><strong>Location:</strong> @job.Location</li>
                                <li><strong>Category:</strong> @job.CategoryName</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="Details" asp-route-id="@job.JobId" class="btn btn-primary btn-sm w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No jobs found</h4>
            <p>Try adjusting your search criteria or check back later for new opportunities.</p>
        </div>
    }
</div>

<style>
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Fix select dropdown positioning */
    select.form-select {
        position: relative;
        z-index: 1;
    }
    
    /* Ensure dropdown doesn't overflow */
    .row.mb-4 {
        position: relative;
        z-index: 10;
    }
    
    /* Ensure cards are below the filter */
    .card {
        position: relative;
        z-index: 1;
    }
</style>
