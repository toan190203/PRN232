@model IEnumerable<PartTimeJobManagement.Client.Models.DTOs.JobResponseDTO>

@{
    ViewData["Title"] = "My Posted Jobs";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>My Posted Jobs</h2>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-success">Post New Job</a>
            <a asp-action="Index" class="btn btn-outline-primary">Browse All Jobs</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Salary</th>
                        <th>Location</th>
                        <th>Posted Date</th>
                        <th>Expiration</th>
                        <th>Applications</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>
                                <strong>@job.Title</strong>
                                <br />
                                <small class="text-muted">@(job.Description.Length > 50 ? job.Description.Substring(0, 50) + "..." : job.Description)</small>
                            </td>
                            <td><span class="badge bg-info">@job.CategoryName</span></td>
                            <td>$@(job.Salary?.ToString("N2") ?? "N/A")</td>
                            <td>@job.Location</td>
                            <td>@job.PostedDate.ToString("MMM dd, yyyy")</td>
                            <td>@(job.ExpirationDate?.ToString("MMM dd, yyyy") ?? "No expiration")</td>
                            <td><span class="badge bg-primary">@job.TotalApplications</span></td>
                            <td>
                                @if (job.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@job.Status</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@job.JobId" class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@job.JobId" method="post" style="display:inline;" 
                                          onsubmit="return confirm('Are you sure you want to delete this job posting?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No jobs posted yet</h4>
            <p>You haven't posted any jobs. <a asp-action="Create" class="alert-link">Post your first job</a> to start finding students!</p>
        </div>
    }
</div>
