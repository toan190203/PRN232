@model List<PartTimeJobManagement.Client.Models.DTOs.JobResponseDTO>

@{
    ViewData["Title"] = "Job Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Job Management</h2>
        </div>
        <div class="col-auto">
            <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search and Filter -->
    <form method="get" asp-action="Jobs" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Search by job title or description..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <option value="Open" selected="@(ViewBag.Status == "Open")">Open</option>
                    <option value="Closed" selected="@(ViewBag.Status == "Closed")">Closed</option>
                    <option value="Filled" selected="@(ViewBag.Status == "Filled")">Filled</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>

    <!-- Jobs Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">All Jobs (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Employer</th>
                                <th>Category</th>
                                <th>Salary</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Posted</th>
                                <th>Applications</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model)
                            {
                                <tr>
                                    <td>@job.JobId</td>
                                    <td>
                                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.JobId">
                                            @job.Title
                                        </a>
                                    </td>
                                    <td>@job.EmployerName</td>
                                    <td>@job.CategoryName</td>
                                    <td>$@job.Salary</td>
                                    <td>@job.Location</td>
                                    <td>
                                        @if (job.Status == "Open")
                                        {
                                            <span class="badge bg-success">Open</span>
                                        }
                                        else if (job.Status == "Closed")
                                        {
                                            <span class="badge bg-danger">Closed</span>
                                        }
                                        else if (job.Status == "Filled")
                                        {
                                            <span class="badge bg-primary">Filled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@job.Status</span>
                                        }
                                    </td>
                                    <td>@job.PostedDate.ToString("MMM dd, yyyy")</td>
                                    <td>@job.TotalApplications</td>
                                    <td>
                                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.JobId" 
                                           class="btn btn-sm btn-info">View</a>
                                        <form method="post" asp-action="DeleteJob" asp-route-id="@job.JobId" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Are you sure you want to delete this job? This action cannot be undone.')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center">No jobs found.</p>
            }
        </div>
    </div>
</div>
