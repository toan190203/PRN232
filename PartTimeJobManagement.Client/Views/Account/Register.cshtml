@model PartTimeJobManagement.Client.Models.DTOs.RegisterDTO

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Register</h2>
                
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label">I am a</label>
                        <select asp-for="Role" class="form-select" id="roleSelect">
                            <option value="">-- Select Role --</option>
                            <option value="Student">Student</option>
                            <option value="Employer">Employer</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3" id="studentFields" style="display:none;">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3" id="employerFields" style="display:none;">
                        <label asp-for="CompanyName" class="form-label">Company Name</label>
                        <input asp-for="CompanyName" class="form-control" placeholder="Enter your company name" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <div class="text-center">
                    <p class="mb-0">Already have an account?</p>
                    <a asp-action="Login" class="btn btn-link">Login here</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#roleSelect').change(function() {
                var role = $(this).val();
                if (role === 'Student') {
                    $('#studentFields').show();
                    $('#employerFields').hide();
                } else if (role === 'Employer') {
                    $('#employerFields').show();
                    $('#studentFields').hide();
                } else {
                    $('#studentFields').hide();
                    $('#employerFields').hide();
                }
            });
        });
    </script>
}
