@model PartTimeJobManagement.Client.Models.DTOs.ContractResponseDTO

@{
    ViewData["Title"] = "Contract Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-file-earmark-check"></i> Contract Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Job Title</label>
                            <p>@Model.JobTitle</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Status</label>
                            <p>
                                @switch (Model.Status)
                                {
                                    case "Active":
                                        <span class="badge bg-success">Active</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-info">Completed</span>
                                        break;
                                    case "Terminated":
                                        <span class="badge bg-danger">Terminated</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@Model.Status</span>
                                        break;
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Student</label>
                            <p>@Model.StudentName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Employer</label>
                            <p>@Model.EmployerName</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Start Date</label>
                            <p>@Model.StartDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">End Date</label>
                            <p>@(Model.EndDate?.ToString("MMMM dd, yyyy") ?? "Ongoing")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Salary Agreed</label>
                            <p class="text-success fs-5">$@Model.SalaryAgreed</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Total Paid</label>
                            <p class="text-info fs-5">$@Model.TotalPaid</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="fw-bold">Created Date</label>
                            <p>@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ContractFile))
                    {
                        <hr />
                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="fw-bold">Contract File</label>
                                <p class="text-muted">@Model.ContractFile</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    @if (Context.Session.GetString("UserRole") == "Employer")
                    {
                        <a asp-action="Index" class="btn btn-outline-primary w-100 mb-2">Back to All Contracts</a>
                        <a asp-controller="Payments" asp-action="Create" asp-route-contractId="@Model.ContractId" class="btn btn-success w-100 mb-2">
                            <i class="bi bi-cash"></i> Create Payment
                        </a>
                        <a asp-controller="Payments" asp-action="Index" asp-route-contractId="@Model.ContractId" class="btn btn-outline-info w-100">
                            <i class="bi bi-list"></i> View Payments
                        </a>
                    }
                    else
                    {
                        <a asp-action="MyContracts" class="btn btn-outline-primary w-100 mb-2">Back to My Contracts</a>
                        <a asp-controller="Payments" asp-action="MyPayments" class="btn btn-outline-success w-100">
                            <i class="bi bi-cash"></i> View My Payments
                        </a>
                    }
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Contract Summary</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total Payments:</strong><br />
                    @Model.TotalPayments payments</p>
                    
                    <p><strong>Total Paid:</strong><br />
                    $@Model.TotalPaid</p>
                    
                    <p><strong>Remaining:</strong><br />
                    $@(Model.SalaryAgreed - Model.TotalPaid)</p>
                </div>
            </div>
        </div>
    </div>
</div>
